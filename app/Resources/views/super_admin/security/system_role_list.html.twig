{% extends 'base.fcc.html.twig' %}

{% block page_toolbar_left %}
    System Roles
{% endblock %}
{% block page_toolbar_right %}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">

            <form method="post" action="{{ path('system_role_list') }}">
                <div style="margin-bottom: 10px;">
                    <input type="text" class="form-control input-sm" name="search_name"
                           value="{{ searchFilter.roleName }}"
                           placeholder="Search Name"
                           style="width: 250px;display: inline-block;" autocomplete="off">

                    <select class="form-control input-sm input-14" name="searchOrganization"
                            style="display: inline-block; width: 300px;">
                        <option value="">Search Category</option>
                        {% for roleCategory in systemRoleCategories %}
                            {% if roleCategory.id == searchFilter.category %}
                                {% set selected = 'selected' %}
                            {% else %}
                                {% set selected = '' %}
                            {% endif %}
                            <option value="{{ roleCategory.id }}" {{ selected }}>{{ roleCategory.description }}</option>
                        {% endfor %}
                    </select>

                    <button type="submit" name="btnSearch" class="btn btn-primary btn-sm">
                        <i class="fa fa-search"></i> Search
                    </button>
                    {#<button type="submit" name="btnResetSearch" class="btn btn-primary btn-sm">
                        <i class="fa fa-refresh"></i>
                    </button>#}
                </div>

                <div style="margin-top: 40px;margin-bottom: 5px;">
                    <div class="pull-left">
                        <div class="btn-group btn-group-sm" role="group"
                             style="display: inline-block;font-weight: bold;">
                            <button type="submit" class="btn btn-default" name="btnPageFirst">|<i class="fa fa-chevron-left"></i> </button>
                            <button type="submit" class="btn btn-default" name="btnPagePrev"> <i class="fa fa-chevron-left"></i> </button>
                            <button type="submit" class="btn btn-default" name="btnPageNext"> <i class="fa fa-chevron-right"></i> </button>
                            <button type="submit" class="btn btn-default" name="btnPageLast"> <i class="fa fa-chevron-right"></i>|</button>
                        </div>
                        <div style="display: inline-block;margin-left: 20px;">
                            {{ paginator.paginationDescription }}
                        </div>
                    </div>
                    <div class="pull-right">
                        <a class="btn btn-info btn-sm" href="{{ path('system_role_new') }}">
                            <i class="fa fa-plus"></i> Add
                        </a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="40">S/N</th>
                        <th>Role Name</th>
                        <th>Category</th>
                        <th>Total Users</th>
                        <th width="100">Status</th>
                        <th width="50"></th>
                        <th width="30"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for record in records %}
                        <tr>
                            <td>{{ record.displaySerialNo }}</td>
                            <td>{{ record.roleName }}</td>
                            <td>{{ record.categoryName }}</td>
                            <td>{{ record.totalActiveUsers }}</td>
                            <td>{{ record.recordStatus }}</td>
                            <td>
                                <a href="{{ path('system_role_edit', { guid: record.guid }) }}"
                                   class="btn btn-xs btn-primary" title="Edit">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('system_role_delete', { guid: record.guid }) }}"
                                   class="btn btn-xs btn-danger" title="Delete">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div>
                    <input type="hidden" name="startRow" value="{{ paginator.startRow }}"/>
                </div>
            </form>

        </div>
    </div>
{% endblock %}