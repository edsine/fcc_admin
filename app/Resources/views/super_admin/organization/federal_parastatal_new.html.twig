{% extends 'base.fcc.html.twig' %}

{% block page_toolbar_left %}
    Add Federal Parastatal
{% endblock %}
{% block page_toolbar_right %}
    <a class="btn btn-link close-btn" href="{{ path('federal_parastatal_list') }}"><i class="fa fa-arrow-left"></i></a>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-6">

            <div class="panel panel-default">
                <div class="panel-body">
                    {% if alertNotification.hasMessage %}
                        <div style="margin-bottom: 30px;">
                            <div class="alert alert-{{ alertNotification.type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                {% for message in alertNotification.messages %}
                                    {{ message }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('federal_parastatal_new') }}" class="form-horizontal">
                        <div class="form-group">
                            <label for="organization-name" class="col-sm-3 control-label">Organization Name<span class="required-field">*</span></label>
                            <div class="col-sm-9">
                                <input type="text" name="organization_name" value="{{ organization.organizationName }}"
                                       class="form-control text-uppercase input-14" id="organization-name"
                                       placeholder="Enter Organization Name"
                                       autocomplete="off">
                                {{ validator.fields.field('organization_name').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="establishment-code" class="col-sm-3 control-label">Establishment Code<span class="required-field">*</span></label>
                            <div class="col-sm-9">
                                <input type="text" name="establishment_code"
                                       value="{{ organization.establishmentCode }}"
                                       class="form-control text-uppercase input-14" id="establishment-code"
                                       placeholder="Enter Code"
                                       autocomplete="off">
                                {{ validator.fields.field('establishment_code').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="establishment-mnemonic" class="col-sm-3 control-label">Organization
                                Mnemonic<span class="required-field">*</span></label>
                            <div class="col-sm-9">
                                <input type="text" name="establishment_mnemonic"
                                       value="{{ organization.establishmentMnemonic }}"
                                       class="form-control text-uppercase input-14" id="establishment-mnemonic"
                                       placeholder="Enter Mnemonic"
                                       autocomplete="off">
                                {{ validator.fields.field('establishment_mnemonic').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="parent-organization" class="col-sm-3 control-label">Ministry</label>
                            <div class="col-sm-9">
                                <select class="form-control input-14 select-2" id="parent-organization" name="parent_organization">
                                    <option value="">Choose Ministry</option>
                                    {% for ministry in parentOrganizations %}
                                        {% if ministry.id == organization.parentOrganizationId %}
                                            {% set selected = 'selected' %}
                                        {% else %}
                                            {% set selected = '' %}
                                        {% endif %}
                                        <option value="{{ ministry.id }}" {{ selected }}>{{ ministry.organization_name }}</option>
                                    {% endfor %}
                                </select>
                                {{ validator.fields.field('parent_organization').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="establishment_categories" class="control-label col-sm-3 label-left">
                                Organization Categories:
                                <span class="required-field"> </span>
                            </label>
                            <div class="col-sm-9">
                                <select id="establishment_categories" name="establishment_categories[]" multiple="multiple"
                                        class="form-control input-14 select-2 multiple-select">
                                    {% for category in organizationCategoryTypes %}
                                        {% if category.id in organization.establishmentCategoryIds %}
                                            {% set selected = 'selected' %}
                                        {% else %}
                                            {% set selected = '' %}
                                        {% endif %}
                                        <option value="{{ category.id }}" {{ selected }}>{{ category.description }}</option>
                                    {% endfor %}
                                </select>
                                {{ validator.fields.field('establishment_categories').html | raw }}
                            </div>
                        </div>
                        {#<div class="form-group">
                            <label for="fcc-desk-officer" class="col-sm-3 control-label">FCC Desk Officer<span class="required-field">*</span></label>
                            <div class="col-sm-9">
                                <select class="form-control input-14" id="fcc-desk-officer" name="fcc_desk_officer">
                                    <option value="">Choose FCC Desk Officer</option>
                                    {% for deskOfficer in fccDeskOfficers %}
                                        {% if deskOfficer.id == organization.fccDeskOfficerId %}
                                            {% set selected = 'selected' %}
                                        {% else %}
                                            {% set selected = '' %}
                                        {% endif %}
                                        <option value="{{ deskOfficer.id }}" {{ selected }}>{{ deskOfficer.user_info }}</option>
                                    {% endfor %}
                                </select>
                                {{ validator.fields.field('fcc_desk_officer').html | raw }}
                            </div>
                        </div>#}
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" name="btnSubmit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-sm-6">

        </div>
    </div>
{% endblock %}