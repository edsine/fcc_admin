{% extends 'base.fcc.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('jquery-confirm/jquery-confirm.min.css') }}"/>
{% endblock %}

{% block page_toolbar_left %}
    Delete Federal Ministry
{% endblock %}
{% block page_toolbar_right %}
    <a class="btn btn-link close-btn" href="{{ path('federal_ministry_list') }}"><i class="fa fa-arrow-left"></i></a>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-6">

            <div class="panel panel-default">
                <div class="panel-body">
                    {% if alertNotification.hasMessage %}
                        <div style="margin-bottom: 30px;">
                            <div class="alert alert-{{ alertNotification.type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                {% for message in alertNotification.messages %}
                                    {{ message }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('federal_ministry_delete', { guid : organization.guid }) }}"
                          id="form" class="form-horizontal">
                        <div class="form-group">
                            <label for="organization-name" class="col-sm-3 control-label">Organization Name</label>
                            <div class="col-sm-9">
                                <input type="text" name="organization_name" value="{{ organization.organizationName }}"
                                       class="form-control text-uppercase input-14" id="organization-name"
                                       placeholder="Enter Organization Name"
                                       autocomplete="off" readonly>
                                {{ validator.fields.field('organization_name').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="establishment-code" class="col-sm-3 control-label">Establishment Code</label>
                            <div class="col-sm-9">
                                <input type="text" name="establishment_code"
                                       value="{{ organization.establishmentCode }}"
                                       class="form-control text-uppercase input-14" id="establishment-code"
                                       placeholder="Enter Code"
                                       autocomplete="off" readonly>
                                {{ validator.fields.field('establishment_code').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="establishment-mnemonic" class="col-sm-3 control-label">Organization Mnemonic</label>
                            <div class="col-sm-9">
                                <input type="text" name="establishment_mnemonic"
                                       value="{{ organization.establishmentMnemonic }}"
                                       class="form-control text-uppercase input-14" id="establishment-mnemonic"
                                       placeholder="Enter Mnemonic"
                                       autocomplete="off" readonly>
                                {{ validator.fields.field('establishment_mnemonic').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="fcc-committee" class="col-sm-3 control-label">FCC Committee</label>
                            <div class="col-sm-9">
                                <input class="form-control input-14" id="fcc-committee"
                                       name="fcc_committee" value="{{ organization.fccCommitteeName }}"
                                       autocomplete="off" readonly/>
                                {{ validator.fields.field('fcc_committee').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="fcc-desk-officer" class="col-sm-3 control-label">FCC Desk Officer</label>
                            <div class="col-sm-9">
                                <input class="form-control input-14" id="fcc-desk-officer"
                                       name="fcc_desk_officer" value="{{ organization.fccDeskOfficerName }}"
                                       autocomplete="off" readonly/>
                                {{ validator.fields.field('fcc_desk_officer').html | raw }}
                            </div>
                        </div>
                        <div class="col-sm-9 col-sm-offset-3">
                            <input type="hidden" name="guid" value="{{ organization.guid }}">
                            <input type="hidden" name="establishment_type" value="{{ organization.establishmentTypeId }}">
                            <input type="hidden" name="btnSubmit"/>
                            <button id="btnDelete" class="btn btn-info btn-sm">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-sm-6">

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('jquery-confirm/jquery-confirm.min.js') }}"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $('#btnDelete').on('click', function (event) {
                event.preventDefault();

                $.confirm({
                    title: 'Confirmation?',
                    content: 'Are you sure you want to delete this Organization?',
                    buttons: {
                        ok: {
                            text: "Yes",
                            btnClass: 'btn-primary',
                            keys: ['enter'],
                            action: function () {
                                $('#form').submit();
                            }
                        },
                        cancel: function () {
                            //console.log('the user clicked cancel');
                        }
                    }
                });
            });

        });

    </script>
{% endblock %}