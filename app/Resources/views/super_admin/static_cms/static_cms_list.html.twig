{% extends 'base.fcc.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/material-design-card-with-image.css') }}"/>
{% endblock %}

{% block page_toolbar_left %}
    Static CMS
{% endblock %}
{% block page_toolbar_right %}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-12">

            <div style="display: flex;flex-wrap: wrap;align-items: flex-start;">

                {% for record in records %}
                <div class="wrapper">
                    <div class="card radius shadowDepth1">
                        <div class="card__image border-tlr-radius">
                            <img src="{{ asset('images/fcc-card-default-image.png') }}" alt="image" class="border-tlr-radius">
                        </div>

                        <div class="card__content card__padding">
                            <div class="card__share">
                                <a id="share" class="share-toggle share-icon" href="{{ path('static_cms_edit', { guid : record.guid }) }}">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </div>

                            <div class="card__meta">
                                {#<a href="#">PGL</a>#}
                                <time>{{ record.lastModified }}</time>
                            </div>

                            <article class="card__article">
                                <h5>{{ record.description }}</h5>

                                {#<p>{{ record.content | raw }}</p>#}
                            </article>
                        </div>

                        {#<div class="card__action">

                            <div class="card__author">
                                <img src="http://lorempixel.com/40/40/sports/" alt="user">
                                <div class="card__author-content">
                                    By <a href="#">John DoePGL</a>
                                </div>
                            </div>
                        </div>#}
                    </div>
                </div>
                {% endfor %}



            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/material-design-card-with-image.js') }}"></script>
{% endblock %}