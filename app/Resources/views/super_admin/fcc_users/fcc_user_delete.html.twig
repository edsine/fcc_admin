{% extends 'base.fcc.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('jquery-confirm/jquery-confirm.min.css') }}"/>
{% endblock %}

{% block page_toolbar_left %}
    Delete FCC User
{% endblock %}
{% block page_toolbar_right %}
    <a class="btn btn-link close-btn" href="{{ path('fcc_user_list') }}"><i class="fa fa-arrow-left"></i></a>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-5">

            <div class="panel panel-default">
                <div class="panel-body">

                    {% if alertNotification.hasMessage %}
                        <div style="margin-bottom: 30px;">
                            <div class="alert alert-{{ alertNotification.type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                {% for message in alertNotification.messages %}
                                    {{ message }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('fcc_user_delete', { guid: userProfile.guid }) }}" id="form" class="form-horizontal">
                        <div class="form-group">
                            <label for="username" class="col-sm-3 control-label">Username:</label>
                            <div class="col-sm-9">
                                <input type="text" name="username" value="{{ userProfile.username }}"
                                       class="form-control input-14" id="username" placeholder="Enter Username"
                                       autocomplete="off" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="first-name" class="col-sm-3 control-label">First Name:</label>
                            <div class="col-sm-9">
                                <input type="text" name="first_name" value="{{ userProfile.firstName }}"
                                       class="form-control input-14" id="first-name" placeholder="Enter First Name"
                                       autocomplete="off" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="last-name" class="col-sm-3 control-label">Last Name:</label>
                            <div class="col-sm-9">
                                <input type="text" name="last_name" value="{{ userProfile.lastName }}"
                                       class="form-control input-14" id="last-name" placeholder="Enter Last Name"
                                       autocomplete="off" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-sm-3 control-label">Email:</label>
                            <div class="col-sm-9">
                                <input type="text" name="email" value="{{ userProfile.emailAddress }}"
                                       class="form-control input-14" id="email" placeholder="Enter Email"
                                       autocomplete="off" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="primary-phone" class="col-sm-3 control-label">Primary Phone:</label>
                            <div class="col-sm-9">
                                <input type="text" name="primary_phone" value="{{ userProfile.primaryPhone }}"
                                       class="form-control input-14" id="primary-phone"
                                       placeholder="Enter Primary Phone Number"
                                       autocomplete="off" readonly>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="fcc-location" class="col-sm-3 control-label">State of posting:</label>
                            <div class="col-sm-9">
                                <input type="text" name="state_of_posting" value="{{ userProfile.stateOfPostingName }}"
                                       class="form-control input-14" id="state-of-posting" placeholder="Enter State Of Posting"
                                       autocomplete="off" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="fcc-department" class="col-sm-3 control-label">Department:</label>
                            <div class="col-sm-9">
                                <input type="text" name="fcc_department" value="{{ userProfile.fccDepartmentName }}"
                                       class="form-control input-14" id="fcc-department" placeholder="Enter Department"
                                       autocomplete="off" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="primary-role" class="col-sm-3 control-label">Primary Role:</label>
                            <div class="col-sm-9">
                                <input type="text" name="primary_role" value="{{ userProfile.primaryRole }}"
                                       class="form-control input-14" id="primary-role" placeholder="Enter Primary Role"
                                       autocomplete="off" readonly>
                            </div>
                        </div>
                        <div class="col-sm-9 col-sm-offset-3">
                            <input type="hidden" name="btnSubmit"/>
                            <input type="hidden" name="guid" value="{{ userProfile.guid }}">
                            <button id="btnDelete" class="btn btn-info btn-sm">Submit</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
        <div class="col-sm-7">

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('jquery-confirm/jquery-confirm.min.js') }}"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $('#btnDelete').on('click', function (event) {
                event.preventDefault();

                $.confirm({
                    title: 'Confirmation?',
                    content: 'Are you sure you want to delete this User?',
                    buttons: {
                        ok: {
                            text: "Yes",
                            btnClass: 'btn-primary',
                            keys: ['enter'],
                            action: function(){
                                $('#form').submit();
                            }
                        },
                        cancel: function(){
                            //console.log('the user clicked cancel');
                        }
                    }
                });
            });

        });

    </script>
{% endblock %}