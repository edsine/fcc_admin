{% extends 'base.fcc.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('jquery-confirm/jquery-confirm.min.css') }}"
          xmlns="http://www.w3.org/1999/html"/>
    <link rel="stylesheet" href="{{ asset('css/form-wizard.css') }}"/>
{% endblock %}

{% block page_toolbar_left %}
    Reset Submission Issues
{% endblock %}
{% block page_toolbar_right %}

{% endblock %}


{% block main %}

    {% if app.session.started and app.session.flashBag.peekAll is not empty %}
        <div class="messages">
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="alert alert-dismissible alert-{{ type }}" role="alert">
                        <button type="button" class="close" data-dismiss="alert"
                                aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {% autoescape false %}
                            {{ message }}
                        {% endautoescape %}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-md-4">

            <div class="panel panel-default">
                <div class="panel-heading">Clear Fatal Error Submissions</div>
                <div class="panel-body text-center">

                    <form id="form-clear-fatal-errors" method="post" action="{{ path('mis_head_clear_fatal_errors') }}" onsubmit="showLoading();">

                        <button id="btn-clear-fatal-errors" type="button" name="btn_delete" class="btn btn-danger">
                            Remove all submissions with fatal error
                        </button>

                    </form>

                </div>
            </div>
        </div>

        <div class="col-md-4">

            <div class="panel panel-default">
                <div class="panel-heading">Reset hanging report processing</div>
                <div class="panel-body text-center">

                    <form id="form-reset-hanging-report-analysis" method="post" action="{{ path('mis_head_reset_hanging_report_analysis') }}" onsubmit="showLoading();">

                        <button id="btn-reset-hanging-report-analysis" type="button" name="btn_delete" class="btn btn-danger">
                            Reset hanging report analysis started before yesterday.
                        </button>

                    </form>

                </div>
            </div>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery.form.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('jquery-confirm/jquery-confirm.min.js') }}"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $('#btn-clear-fatal-errors').on('click', function (event) {
                event.preventDefault();

                $.confirm({
                    title: 'Confirmation?',
                    content: 'Are you sure you want to clear all fatal error submissions?',
                    buttons: {
                        ok: {
                            text: "Yes",
                            btnClass: 'btn-primary',
                            keys: ['enter'],
                            action: function () {
                                $('#form-clear-fatal-errors').submit();
                            }
                        },
                        cancel: function () {
                            //console.log('the user clicked cancel');
                        }
                    }
                });
            });

            $('#btn-reset-hanging-report-analysis').on('click', function (event) {
                event.preventDefault();

                $.confirm({
                    title: 'Confirmation?',
                    content: 'Are you sure you want to reset hanging report processing?',
                    buttons: {
                        ok: {
                            text: "Yes",
                            btnClass: 'btn-primary',
                            keys: ['enter'],
                            action: function () {
                                $('#form-reset-hanging-report-analysis').submit();
                            }
                        },
                        cancel: function () {
                            //console.log('the user clicked cancel');
                        }
                    }
                });
            });

        });

    </script>
{% endblock %}