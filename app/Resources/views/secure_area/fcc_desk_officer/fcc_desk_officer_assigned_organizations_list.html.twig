{% extends 'base.fcc.html.twig' %}

{% block page_toolbar_left %}
    Assigned MDA(s)
{% endblock %}
{% block page_toolbar_right %}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-12">

            <form method="post" action="{{ path('fcc_desk_officer_assigned_organizations_list') }}">

                <div style="margin-top: 40px;margin-bottom: 5px;">
                    <div class="pull-left">
                        <div class="btn-group btn-group-sm" role="group"
                             style="display: inline-block;font-weight: bold;">
                            <button type="submit" class="btn btn-default" name="btnPageFirst">|<i class="fa fa-chevron-left"></i> </button>
                            <button type="submit" class="btn btn-default" name="btnPagePrev"> <i class="fa fa-chevron-left"></i> </button>
                            <button type="submit" class="btn btn-default" name="btnPageNext"> <i class="fa fa-chevron-right"></i> </button>
                            <button type="submit" class="btn btn-default" name="btnPageLast"> <i class="fa fa-chevron-right"></i>|</button>
                        </div>
                        <div style="display: inline-block;margin-left: 20px;">
                            {{ paginator.paginationDescription }}
                        </div>
                    </div>
                    <div class="pull-right">

                    </div>
                    <div class="clearfix"></div>
                </div>

                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="40">S/N</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Mnemonic</th>
                        <th>Contact Person</th>
                        <th>Contact Phone</th>
                        <th>Contact Email</th>
                        <th>FCC Committee</th>
                        <th>FCC Desk Officer</th>
                        <th width="100">Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for record in records %}
                        <tr>
                            <td>{{ record.displaySerialNo }}</td>
                            <td>{{ record.organizationName }}</td>
                            <td>{{ record.establishmentCode }}</td>
                            <td>{{ record.establishmentMnemonic }}</td>
                            <td>{{ record.mdaDeskOfficerName }}</td>
                            <td>{{ record.mdaDeskOfficerPhone }}</td>
                            <td>{{ record.mdaDeskOfficerEmail }} </td>
                            <td>{{ record.fccCommitteeName }}</td>
                            <td>{{ record.fccDeskOfficerName }}</td>
                            <td>{{ record.status }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div>
                    <input type="hidden" name="startRow" value="{{ paginator.startRow }}"/>
                </div>
            </form>

        </div>
    </div>
{% endblock %}