{% extends 'base.fcc.html.twig' %}

{% block page_toolbar_left %}
    RecruitmentAdvert Uploads
{% endblock %}
{% block page_toolbar_right %}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-12">

            <form method="post" action="{{ path('mda_admin_vacancy_list') }}">
                <div style="margin-bottom: 10px;">
                    <input type="text" class="form-control input-sm" name="search_title"
                           value="{{ searchFilter.title }}"
                           placeholder="Search Title"
                           style="width: 250px;display: inline-block;" autocomplete="off">
                    <button type="submit" name="btn_search" class="btn btn-primary btn-sm">
                        <i class="fa fa-search"></i> Search
                    </button>
                    {#<button type="submit" name="btnResetSearch" class="btn btn-primary btn-sm">
                        <i class="fa fa-refresh"></i>
                    </button>#}
                </div>

                <div style="margin-top: 40px;margin-bottom: 5px;">
                    <div class="pull-left">
                        <div class="btn-group btn-group-sm" role="group"
                             style="display: inline-block;font-weight: bold;">
                            <button type="submit" class="btn btn-default" name="btn_page_first">|<i class="fa fa-chevron-left"></i> </button>
                            <button type="submit" class="btn btn-default" name="btn_page_prev"> <i class="fa fa-chevron-left"></i> </button>
                            <button type="submit" class="btn btn-default" name="btn_page_next"> <i class="fa fa-chevron-right"></i> </button>
                            <button type="submit" class="btn btn-default" name="btn_page_last"> <i class="fa fa-chevron-right"></i>|</button>
                        </div>
                        <div style="display: inline-block;margin-left: 20px;">
                            {{ paginator.paginationDescription }}
                        </div>
                    </div>
                    <div class="pull-right">
                        <a class="btn btn-primary btn-sm" href="{{ path('mda_admin_vacancy_new') }}">
                            <i class="fa fa-plus"></i> Post New RecruitmentAdvert
                        </a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="40">S/N</th>
                        <th>Organization</th>
                        <th>Title</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th width="50"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {# @var record \AppBundle\Model\RecruitmentAdvert\RecruitmentAdvert #}
                    {% for record in records %}
                        <tr>
                            <td>{{ record.displaySerialNo }}</td>
                            <td>{{ record.organizationName }}</td>
                            <td>{{ record.title }}</td>
                            <td>{{ record.startDate }}</td>
                            <td>{{ record.endDate }}</td>
                            <td>
                                <a href="{{ path('mda_admin_vacancy_show', { selector : record.selector }) }}"
                                   class="btn btn-xs btn-primary" title="View">
                                    <i class="fa fa-folder-open"></i> View
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div>
                    <input type="hidden" name="start_row" value="{{ paginator.startRow }}"/>
                </div>
            </form>

        </div>
    </div>
{% endblock %}