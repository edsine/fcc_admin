{% extends 'base.fcc.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/body-not-white.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('fancybox/jquery.fancybox.css') }}" type="text/css" media="screen"/>
{% endblock %}

{% block page_toolbar_left %}
    Profile
{% endblock %}
{% block page_toolbar_right %}
    {#<a class="btn btn-link close-btn" href="{{ path('federal_ministry_list') }}"><i class="fa fa-arrow-left"></i></a>#}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-3">

            {% include 'secure_area/user_account_profile/_user_profile_summary.html.twig' %}

        </div>
        <div class="col-sm-9">
            <div class="organization-profile-wrapper">

                {% include 'secure_area/user_account_profile/_user_account_profile_tabs.html.twig' with { activePage : 'mda_fcc_desk_officer_summary' } %}

                <div class="v-sep-20"></div>

                <div class="pull-left">
                    {% if mdaFccDeskOfficerInfo.id %}
                        <a href="#" class="btn btn-primary"
                           onclick="openFancyBox('{{ path('send_single_recipient_notification'
                               , { recipientUserId : mdaFccDeskOfficerInfo.id
                                   , phone : mdaFccDeskOfficerInfo.primaryPhone
                                   , email : mdaFccDeskOfficerInfo.emailAddress
                                   , name : mdaFccDeskOfficerInfo.displayName }) }}')">
                            <i class="fa fa-envelope-open"></i> Contact FCC Desk Officer
                        </a>
                    {% else %}
                        <a href="#" class="btn btn-primary disabled">
                            <i class="fa fa-envelope-open"></i> Contact FCC Desk Officer
                        </a>
                    {% endif %}
                </div>
                <div class="clearfix"></div>
                <div class="v-sep-20"></div>
                <table class="table table-striped table-hover">
                    <tr>
                        <td width="90"><b>Full Name:</b></td>
                        <td>{{ mdaFccDeskOfficerInfo.displayName }}</td>
                    </tr>
                    <tr>
                        <td><b>Email:</b></td>
                        <td>{{ mdaFccDeskOfficerInfo.emailAddress }}</td>
                    </tr>
                    <tr>
                        <td><b>Phone:</b></td>
                        <td>{{ mdaFccDeskOfficerInfo.primaryPhone }}</td>
                    </tr>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('fancybox/jquery.fancybox.js') }}"></script>
    <script>
        function openFancyBox(url) {
            $.fancybox.open({
                autoSize: false,
                width: '850',
                height: '530',
                href: '' + url + '',
                type: 'iframe',
                padding: 2,
                helpers: {
                    overlay: {
                        closeClick: false
                    }
                }
            });
            return false;
        }

    </script>

