{% extends 'base.fcc.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/body-not-white.css') }}" rel="stylesheet">
{% endblock %}

{% block page_toolbar_left %}
    Profile
{% endblock %}
{% block page_toolbar_right %}
    {#<a class="btn btn-link close-btn" href="{{ path('federal_ministry_list') }}"><i class="fa fa-arrow-left"></i></a>#}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-3">

            {% include 'secure_area/user_account_profile/_user_profile_summary.html.twig' %}

        </div>
        <div class="col-sm-9">
            <div class="organization-profile-wrapper">

                {% include 'secure_area/user_account_profile/_user_account_profile_tabs.html.twig' with { activePage : 'profile_edit' } %}

                <div class="v-sep-20"></div>

                {% if alertNotification.hasMessage %}
                    <div style="margin-bottom: 30px;">
                        <div class="alert alert-{{ alertNotification.type }} alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                            {% for message in alertNotification.messages %}
                                {{ message }}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
                <div>
                    <form method="post" action="{{ path('user_profile_edit') }}" class="form-horizontal"
                          onsubmit="showLoading();">

                        <div class="form-group">
                            <label for="first-name" class="col-sm-2 control-label">First Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control input-14"
                                       name="first_name" id="first-name" value="{{ userProfile.firstName }}"
                                       autocomplete="off"/>
                                {{ validator.fields.field('first_name').html | raw }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="last-name" class="col-sm-2 control-label">Last Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control input-14"
                                       name="last_name" id="last-name" value="{{ userProfile.lastName }}"
                                       autocomplete="off"/>
                                {{ validator.fields.field('last_name').html | raw }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email" class="col-sm-2 control-label">Email:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control input-14"
                                       name="email" id="email" value="{{ userProfile.emailAddress }}"
                                       autocomplete="off"/>
                                {{ validator.fields.field('email').html | raw }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="primary-phone" class="col-sm-2 control-label">Primary Phone:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control input-14"
                                       name="primary_phone" id="primary-phone" value="{{ userProfile.primaryPhone }}"
                                       autocomplete="off"/>
                                {{ validator.fields.field('primary_phone').html | raw }}
                            </div>
                        </div>

                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="hidden" name="guid" value="{{ profileSummary.guid }}">
                            <button type="submit" name="btnSubmit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock %}