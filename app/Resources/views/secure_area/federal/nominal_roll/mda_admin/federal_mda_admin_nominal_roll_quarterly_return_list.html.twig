{% extends 'base.fcc.html.twig' %}

{% block page_toolbar_left %}
    Quarterly Returns Submissions
{% endblock %}
{% block page_toolbar_right %}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">

            <form method="post" action="{{ path('federal_mda_admin_nominal_roll_quarterly_return_list') }}">
                <div style="margin-bottom: 10px;">
                    <input type="text" class="form-control input-sm" name="searchSubmissionYear"
                           value="{{ searchFilter.submissionYear }}"
                           placeholder="Search By Year"
                           style="width: 250px;display: inline-block;" autocomplete="off">
                    <button type="submit" name="btnSearch" class="btn btn-primary btn-sm">
                        Search <i class="fa fa-search"></i>
                    </button>
                    {#<button type="submit" name="btnResetSearch" class="btn btn-primary btn-sm">
                        <i class="fa fa-refresh"></i>
                    </button>#}
                </div>

                <div style="margin-top: 40px;margin-bottom: 5px;">
                    <div class="pull-left">
                        <div class="btn-group btn-group-sm" role="group"
                             style="display: inline-block;font-weight: bold;">
                            <button type="submit" class="btn btn-default" name="btnPageFirst">|<i
                                        class="fa fa-chevron-left"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPagePrev"><i
                                        class="fa fa-chevron-left"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPageNext"><i
                                        class="fa fa-chevron-right"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPageLast"><i
                                        class="fa fa-chevron-right"></i>|
                            </button>
                        </div>
                        <div style="display: inline-block;margin-left: 20px;">
                            {{ paginator.paginationDescription }}
                        </div>
                    </div>
                    <div class="pull-right">
                        <a class="btn btn-primary btn-sm"
                           href="{{ path('check_new_federal_mda_admin_nominal_roll_quarterly_return') }}">
                            <i class="fa fa-plus"></i> New Quarterly Return
                        </a>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="40">S/N</th>
                        <th>Year</th>
                        <th>Organization</th>
                        <th>Date Of Submission</th>
                        <th>File Name</th>
                        <th>Total Rows Imported</th>
                        <th>Validation Status</th>
                        <th>Confirmation Status</th>
                        <th>Processing Status</th>
                        <th width="50"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {# @var record \AppBundle\Model\Submission\NominalRollSubmission #}
                    {% for record in records %}
                        <tr class="VALIDATION-{{ record.validationStatus }}">
                            <td>{{ record.displaySerialNo }}</td>
                            <td>{{ record.submissionYear }}</td>
                            <td>{{ record.organizationName }}</td>
                            <td>{{ record.created }}</td>
                            <td>{{ record.simpleFileName }}</td>
                            <td>{{ record.totalRowsImportedFormatted }}</td>
                            <td>{{ record.validationStatus }}</td>
                            <td>{{ record.fccDeskOfficerConfirmationStatus }}</td>
                            <td>{{ record.processingStatus }}</td>
                            <td>
                                {% if record.validationPending %}
                                    <a href="{{ path('federal_mda_admin_nominal_roll_submission_re_validate', {submissionId : record.submissionId}) }}"
                                       class="btn btn-xs btn-warning" title="Open">
                                        <i class="fa fa-folder-open-o"></i> View
                                    </a>
                                {% elseif record.failedValidation %}
                                    <a href="{{ path('federal_nominal_roll_failed_validation_show', {submissionId : record.submissionId}) }}"
                                       class="btn btn-xs btn-primary" title="Open">
                                        <i class="fa fa-folder-open-o"></i> View
                                    </a>
                                {% elseif record.failedValidationWithFatalError %}
                                    <a href="{{ path('federal_nominal_roll_failed_validation_show', {submissionId : record.submissionId}) }}"
                                       class="btn btn-xs btn-primary" title="Open">
                                        <i class="fa fa-folder-open-o"></i> View
                                    </a>
                                {% elseif record.passedValidation %}
                                    <a href="{{ path('federal_nominal_roll_show', {submissionId : record.submissionId}) }}"
                                       class="btn btn-xs btn-primary" title="Open">
                                        <i class="fa fa-folder-open-o"></i> View
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div>
                    <input type="hidden" name="startRow" value="{{ paginator.startRow }}"/>
                </div>
            </form>

        </div>
    </div>
{% endblock %}