{% extends 'base.fcc.html.twig' %}

{% set referrer = app.request.headers.get('referer')|default('#') %}

{% block page_toolbar_left %}
    {{ nominalRoleSubmission.submissionYear }} Nominal Role Submission
{% endblock %}
{% block page_toolbar_right %}
    <a class="btn btn-link close-btn" href="{{ referrer }}"><i class="fa fa-arrow-left"></i></a>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">

            <div id="passed-validation-summary">
                <table class="flat-table">
                    <tr>
                        <td width="80">
                           <img src="{{ asset('images/checked.png') }}" width="64" height="64" />
                        </td>
                        <td>
                            <table class="flat-table">
                                <tr>
                                    <td width="120">
                                        <b>Organization:</b>
                                    </td>
                                    <td>
                                        {{ nominalRoleSubmission.organizationName }}
                                    </td>
                                </tr>
                                <tr>
                                    <td width="120">
                                       <b>Date Uploaded:</b>
                                    </td>
                                    <td>
                                        {{ nominalRoleSubmission.created }}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>File Name:</b>
                                    </td>
                                    <td>
                                        {{ nominalRoleSubmission.simpleFileName }}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Approvals:</b>
                                    </td>
                                    <td>
                                        <span>Validation: {{ nominalRoleSubmission.validationStatus }}</span>
                                        <span style="margin-left: 15px;">, FCC Desk Officer: {{ nominalRoleSubmission.fccDeskOfficerConfirmationStatus }}</span>
                                        <span style="margin-left: 15px;">, MIS head: {{ nominalRoleSubmission.fccMisHeadApprovalStatus }}</span>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>

            <form method="post"
                  action="{{ path('mis_head_nominal_roll_show',{submissionId : nominalRoleSubmission.submissionId}) }}">
                <div style="margin-top: 20px;margin-bottom: 5px;">
                    <div class="pull-left">
                        <div class="btn-group btn-group-sm" role="group"
                             style="display: inline-block;font-weight: bold;">
                            <button type="submit" class="btn btn-default" name="btnPageFirst">|<i
                                        class="fa fa-chevron-left"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPagePrev"><i
                                        class="fa fa-chevron-left"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPageNext"><i
                                        class="fa fa-chevron-right"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPageLast"><i
                                        class="fa fa-chevron-right"></i>|
                            </button>
                        </div>
                        <div style="display: inline-block;margin-left: 20px;">
                            {{ paginator.paginationDescription }}
                        </div>
                    </div>
                    <div class="pull-right">

                    </div>
                    <div class="clearfix"></div>
                </div>

                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th width="40">S/No</th>
                        <th>Emp.<br/>Status</th>
                        <th>Emp. No<br/>MMM/SSSSSS</th>
                        <th>Name</th>
                        <th>Nationality<br/>Code</th>
                        <th>State of Origin<br/>Code</th>
                        <th>Date of Birth<br/>DD/MMM/YYYY</th>
                        <th>Date of Employment<br/>DD/MMM/YYYY</th>
                        <th>Date of Pres. Appt.<br/>DD/MMM/YYYY</th>
                        <th>Grade Level<br/>Code</th>
                        <th>Designation</th>
                        <th>State Of Location<br/>Code</th>
                        <th>Sex<br/>Code</th>
                        <th>M. Status<br/>Code</th>
                        <th>LGA<br/>Code</th>
                        <th>Region<br/>Code</th>
                        <th>Physically<br/>Challenged</th>
                    </tr>
                    </thead>
                    <tbody>
                    {# @var record \AppBundle\Model\Submission\NominalRoll #}
                    {% for record in records %}
                        <tr>
                            <td class="">{{ record.serialNo }}</td>
                            <td>{{ record.employeeStatus }}</td>
                            <td>{{ record.employeeNumber }}</td>
                            <td>{{ record.name }}</td>
                            <td>{{ record.nationality }}</td>
                            <td>{{ record.stateOfOrigin }}</td>
                            <td>{{ record.dateOfBirth }}</td>
                            <td>{{ record.dateOfEmployment }}</td>
                            <td>{{ record.dateOfPresentAppointment }}</td>
                            <td>{{ record.gradeLevel }}</td>
                            <td>{{ record.designation }}</td>
                            <td>{{ record.stateOfLocation }}</td>
                            <td>{{ record.gender }}</td>
                            <td>{{ record.maritalStatus }}</td>
                            <td>{{ record.lga }}</td>
                            <td>{{ record.geoPoliticalZone }}</td>
                            <td>{{ record.physicallyChallengedStatus }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="17">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div>
                    <input type="hidden" name="startRow" value="{{ paginator.startRow }}"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}