{% extends 'base.fcc.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('jquery-confirm/jquery-confirm.min.css') }}"/>
{% endblock %}

{# loggedInUser \AppBundle\Model\Security\SecurityUser #}
{% set loggedInUser = app.user %}

{# privilegeChecker \AppBundle\Model\Security\PrivilegeChecker #}
{% set privilegeChecker = loggedInUser.privilegeChecker %}

{% set referrer = app.request.headers.get('referer')|default('#') %}

{% block page_toolbar_left %}
    {{ nominalRollSubmission.submissionYear }}

    {% if nominalRollSubmission.mainSubmission %}
        Main Nominal Roll Return
    {% else %}
        Quarterly Nominal Roll Return
    {% endif %}

    <span
            style="color: #F00;">Validation Failed</span>
{% endblock %}

{% block page_toolbar_right %}
    {#<a class="btn btn-link close-btn" href="{{ referrer }}"><i
                class="fa fa-arrow-left"></i></a>#}
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">

            {% if app.session.started and (app.session.flashBag.peekAll is not empty) %}
                <div class="messages">
                    {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages %}
                            {# Bootstrap alert, see http://getbootstrap.com/components/#alerts #}
                            <div class="alert alert-dismissible alert-{{ type }}" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endif %}

            <div id="failed-validation-summary">
                <table class="flat-table error">
                    <tr>
                        <td width="80">
                            <img src="{{ asset('images/cancel.png') }}" width="64" height="64"/>
                        </td>
                        <td>
                            <table class="flat-table">
                                <tr>
                                    <td width="120">
                                        <b>Organization:</b>
                                    </td>
                                    <td>
                                        {{ nominalRollSubmission.organizationName }}
                                    </td>
                                </tr>
                                <tr>
                                    <td width="120">
                                        <b>Date Uploaded:</b>
                                    </td>
                                    <td>
                                        {{ nominalRollSubmission.created }}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>File Name:</b>
                                    </td>
                                    <td>
                                        {{ nominalRollSubmission.simpleFileName }}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Validation Status:</b>
                                    </td>
                                    <td>
                                        {{ nominalRollSubmission.validationStatus }}
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>

            <form method="post"
                  action="{{ path('federal_nominal_roll_failed_validation_show',{submissionId : nominalRollSubmission.submissionId}) }}"
                  onsubmit="showLoading();">
                <div style="margin-top: 20px;margin-bottom: 5px;">
                    <div class="pull-left">
                        <div class="btn-group btn-group-sm" role="group"
                             style="display: inline-block;font-weight: bold;">
                            <button type="submit" class="btn btn-default" name="btnPageFirst">|<i
                                        class="fa fa-chevron-left"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPagePrev"><i
                                        class="fa fa-chevron-left"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPageNext"><i
                                        class="fa fa-chevron-right"></i></button>
                            <button type="submit" class="btn btn-default" name="btnPageLast"><i
                                        class="fa fa-chevron-right"></i>|
                            </button>
                        </div>
                        <div style="display: inline-block;margin-left: 20px;">
                            {{ paginator.paginationDescription }}
                        </div>
                    </div>
                    <div class="pull-right">
                        {% if app.user.privilegeChecker.canUploadFedMdaNominalRoll %}

                            {% if nominalRollSubmission.failedValidation %}
                                <a class="btn btn-primary btn-sm" href="#" id="download-button">
                                    <i class="fa fa-download"></i> Download
                                </a>

                                {#<a class="btn btn-primary btn-sm" href=""
                                   id="re-upload-button">
                                    <i class="fa fa-cloud-upload"></i> Re-Submit
                                </a>#}

                                <a href="http://federalcharacter.gov.ng/fcc-portal-help/" class="btn btn-info btn-sm"
                                   style="margin-right: 20px;" target="_blank">
                                    <i class="fa fa-info"></i> Help
                                </a>

                            {% elseif nominalRollSubmission.failedValidationWithFatalError %}
                                <a class="btn btn-info btn-sm"
                                   style="margin-right: 20px;">
                                    <i class="fa fa-info"></i> Help
                                </a>
                            {% endif %}

                            <button id="btnDelete" type="button" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Delete
                            </button>

                        {% endif %}
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th width="40">S/No</th>
                            <th>Emp.<br/>Status</th>
                            <th>Emp. No<br/>MMM/SSSSSS</th>
                            <th>Name</th>
                            <th>Nationality<br/>Code</th>
                            <th>State of Origin<br/>Code</th>
                            <th>LGA of Origin<br/>Code</th>
                            <th>Region<br/>Code</th>
                            <th>Date of Birth<br/>DD/MMM/YYYY</th>
                            <th>Date of Employment<br/>DD/MMM/YYYY</th>
                            <th>Date of Pres. Appt.<br/>DD/MMM/YYYY</th>
                            <th>Grade Level<br/>Code</th>
                            <th>Designation</th>
                            <th>State Of Location<br/>Code</th>
                            <th>Sex<br/>Code</th>
                            <th>M. Status<br/>Code</th>
                            <th>Physically<br/>Challenged</th>
                            {% if nominalRollSubmission.quarterlyReturn %}
                                <th>Job Status</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {# @var record \AppBundle\Model\Submission\NominalRollValidation #}
                        {% for record in records %}
                            <tr>
                                <td class="">{{ record.serialNo }}</td>
                                <td class="validation{{ record.failedEmployeeStatus }}">{{ record.employeeStatus }}</td>
                                <td class="validation{{ record.failedEmployeeNumber }}">{{ record.employeeNumber }}</td>
                                <td class="validation{{ record.failedName }}">{{ record.name }}</td>
                                <td class="validation{{ record.failedNationality }}">{{ record.nationality }}</td>
                                <td class="validation{{ record.failedStateOfOrigin }}">{{ record.stateOfOrigin }}</td>
                                <td class="validation{{ record.failedLga }}">{{ record.lga }}</td>
                                <td class="validation{{ record.failedGeopoliticalZone }}">{{ record.geoPoliticalZone }}</td>
                                <td class="validation{{ record.failedDateOfBirth }}">{{ record.dateOfBirth }}</td>
                                <td class="validation{{ record.failedDateOfEmployment }}">{{ record.dateOfEmployment }}</td>
                                <td class="validation{{ record.failedDateOfPresentAppointment }}">{{ record.dateOfPresentAppointment }}</td>
                                <td class="validation{{ record.failedGradeLevel }}">{{ record.gradeLevel }}</td>
                                <td class="validation{{ record.failedDesignation }}">{{ record.designation }}</td>
                                <td class="validation{{ record.failedStateOfLocation }}">{{ record.stateOfLocation }}</td>
                                <td class="validation{{ record.failedGender }}">{{ record.gender }}</td>
                                <td class="validation{{ record.failedMaritalStatus }}">{{ record.maritalStatus }}</td>
                                <td class="validation{{ record.failedPhysicallyChallenged }}">{{ record.physicallyChallengedStatus }}</td>
                                {% if nominalRollSubmission.quarterlyReturn %}
                                    <td class="validation{{ record.failedQuarterlyReturnStatus }}">{{ record.quarterlyReturnEmploymentStatus }}</td>
                                {% endif %}
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="{{ nominalRollSubmission.mainSubmission ? 17 : 18 }}">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div>
                    <input type="hidden" name="startRow" value="{{ paginator.startRow }}"/>
                </div>
            </form>

            <div style="visibility: hidden">
                <form method="post"
                      action="{{ path('federal_mda_admin_nominal_roll_submission_delete', {submissionId : nominalRollSubmission.submissionId}) }}"
                      id="deleteForm" onsubmit="showLoading();">
                    <input type="hidden" name="btnSubmit"/>
                </form>
            </div>

            <iframe id="download-frame" style="visibility: hidden" src=""></iframe>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('jquery-confirm/jquery-confirm.min.js') }}"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $('#download-button').on('click', function (event) {
                event.preventDefault();
                $('#download-frame').attr('src', '{{ path('nominal_role_download', { submissionId : nominalRollSubmission.submissionId }) }}');

            });

            $('#btnDelete').on('click', function (event) {
                event.preventDefault();

                $.confirm({
                    title: 'Confirmation?',
                    content: 'Are you sure you want to delete this Submission?<br/>This cannot be reversed.',
                    buttons: {
                        ok: {
                            text: "Yes",
                            btnClass: 'btn-primary',
                            keys: ['enter'],
                            action: function () {
                                $('#deleteForm').submit();
                            }
                        },
                        cancel: function () {
                            //console.log('the user clicked cancel');
                        }
                    }
                });
            });

        });

    </script>
{% endblock %}