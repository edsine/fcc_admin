{% extends 'base.fcc.html.twig' %}

{% block page_toolbar_left %}
    New Submission Permission Request
{% endblock %}
{% block page_toolbar_right %}
    <a class="btn btn-link close-btn" href="{{ path('mda_submission_permission_request_list') }}"><i class="fa fa-arrow-left"></i></a>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-5">

            <div class="panel panel-default">
                <div class="panel-body">

                    {% if alertNotification.hasMessage %}
                        <div style="margin-bottom: 30px;">
                            <div class="alert alert-{{ alertNotification.type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                {% for message in alertNotification.messages %}
                                    {{ message }}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('mda_submission_permission_request_new') }}" class="form-horizontal">
                        <div class="form-group">
                            <label for="submission_year" class="col-sm-3 control-label">Submission Year:</label>
                            <div class="col-sm-9">
                                <input type="text" name="submission_year" value="{{ submissionPermissionRequest.submissionYear }}"
                                       class="form-control input-14" id="submission_year" placeholder="Enter Year of Submission"
                                       autocomplete="off">
                                {{ validator.fields.field('submission_year').html | raw }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="remark" class="col-sm-3 control-label">Reason for request:</label>
                            <div class="col-sm-9">
                                <textarea class="form-control input-14 counter" rows="6" name="remark" id="remark"
                                          placeholder="Enter the reason for requesting this permission"
                                          maxlength="220">{{ submissionPermissionRequest.remarks }}</textarea>
                                {{ validator.fields.field('remark').html | raw }}
                            </div>
                        </div>
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" name="btnSubmit" class="btn btn-info btn-sm">Submit</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-sm-7">

        </div>
    </div>
{% endblock %}