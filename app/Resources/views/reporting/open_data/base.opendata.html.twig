<script src="{{ asset('select2-4.0.3/dist/js/select2.min.js') }}"></script>
<script src="{{ asset('resources/vendor/jquery-growl/javascripts/jquery.growl.js') }}"></script>

<script src="{{ asset('resources/custom/open_data/js/open-data.js') }}"></script>

