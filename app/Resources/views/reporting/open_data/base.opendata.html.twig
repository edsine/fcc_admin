<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="icon" href="{{ asset('favicon.ico') }}">

    {#<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Varela+Round" rel="stylesheet">#}

    <link rel="stylesheet" href="{{ asset('resources/default/open_data/bootstrap/css/bootstrap.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('resources/default/open_data/fonts/font-awesome.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('resources/default/open_data/css/style.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('resources/default/open_data/css/user.css') }}" type="text/css">

    <link rel="stylesheet" href="{{ asset('select2-4.0.3/dist/css/select2.min.css') }}" type="text/css">
